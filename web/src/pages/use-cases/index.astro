---
import MainLayout from '../../layouts/MainLayout.astro';
import Footer from '../../components/astro/Footer.astro';
import { useCases } from '../../lib/landingData.js';

const title = 'Use Cases for Document Intelligence | DecoDocs';
const description = 'Explore DecoDocs use cases for freelancers, small business owners, procurement, legal, finance, HR, and property teams.';
---

<MainLayout title={title} description={description} canonical="https://decodocs.com/use-cases/" image="https://decodocs.com/og.svg">
  <main class="px-6 py-20">
    <div class="mx-auto max-w-6xl">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Use cases</p>
      <h1 class="mt-3 text-5xl font-bold text-slate-900">Workflow templates for real teams</h1>
      <p class="mt-6 max-w-3xl text-lg text-slate-600">Find a proven review workflow for your document-heavy process and start with the right checks from day one.</p>

      <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {useCases.map((useCase, index) => (
          <article class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
            <div class="flex items-center justify-between text-xs font-bold uppercase tracking-wider text-slate-400 mb-6">
              <span>{useCase.audience || 'Use case'}</span>
              <span>{String(index + 1).padStart(2, '0')}</span>
            </div>
            <h2 class="text-2xl font-bold text-slate-900 mb-4">{useCase.title}</h2>
            <p class="text-base text-slate-600 leading-relaxed">{useCase.description}</p>
            <a href={`/use-cases/${useCase.slug}`} class="mt-8 inline-flex text-sm font-bold text-slate-900 no-underline">Read workflow</a>
          </article>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</MainLayout>
